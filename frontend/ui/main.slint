                }
            }

            touch_area := TouchArea {
                width: root.width * 0.8;
                height: root.height * 0.8;

                Rectangle {
                    width: 100%;
                    height: 100%;
                    clip: true;
                    // Map background image
                    if (has_map): Image {
                        source: map_image;
                        y: -10px;
                        width: 100%;
                        height: 100%;
                        image-fit: contain;
                    }
                
                    if (has_map): Rectangle {
                        width: parent.width;
                        height: parent.height;
                        background: rgba(0, 0, 0, 0.3);
                    }
                }

                if (image_opacity_reduction): Image {
                    source: zoomed_image;
                    width: 100%;
                    height: 100%;
                    image-fit: contain;
                    opacity: 70%;
                }

                if (!image_opacity_reduction): Image {
                    source: zoomed_image;
                    width: 100%;
                    height: 100%;
                    image-fit: contain;
                }

                // Legend overlaid on right
                if (has_legend): Image {
                    source: legend;
                    vertical-alignment: bottom;
                    width: 100%;
                    height: 40%;
                    x: parent.width * 0.42;
                    y: parent.height * 0;
                    image-fit: contain;
                }

                // Red dot at center (coordinate location)
                Rectangle {
                    width: 4px;
                    height: 4px;
                    background: #ff0000;
                    border-radius: 4px;
                    x: (parent.width - 4px) / 2;
                    y: (parent.height - 4px) / 2;
                }

                // Loupe overlay (the zoomed part)
                Rectangle {
                    visible: touch_area.has-hover;
                    width: root.loupe-radius * 2;
                    height: root.loupe-radius * 2;
                    x: touch_area.mouse-x - root.loupe-radius;
                    y: touch_area.mouse-y - root.loupe-radius;
                    border-width: 2px;
                    border-color: #888;
                    clip: true;
                    // Make it circular
                    border-radius: root.loupe-radius;
                    z: 100;

                    // Map background image
                    if (has_map): Image {
                        source: map_image;
                        // JavaScript-style background-position calculation: ((x * zoom) - w + bw)
                        // where w = loupe-radius * 2, bw = 2px border
                        x: -((touch_area.mouse-x * root.zoom-factor) - (root.loupe-radius * 2) + root.loupe-radius);
                        y: -((touch_area.mouse-y * root.zoom-factor) - (root.loupe-radius * 2) + root.loupe-radius + 20px);
                        // Scale the image for magnification
                        width: touch_area.width * root.zoom-factor;
                        height: touch_area.height * root.zoom-factor;
                    }

                    if (image_opacity_reduction): Image {
                        source: zoomed_image;
                        // JavaScript-style background-position calculation: ((x * zoom) - w + bw)
                        // where w = loupe-radius * 2, bw = 2px border
                        x: -((touch_area.mouse-x * root.zoom-factor) - (root.loupe-radius * 2) + root.loupe-radius);
                        y: -((touch_area.mouse-y * root.zoom-factor) - (root.loupe-radius * 2) + root.loupe-radius);
                        // Scale the image for magnification
                        width: touch_area.width * root.zoom-factor;
                        height: touch_area.height * root.zoom-factor;
                        opacity: 70%;
                    }

                    if (!image_opacity_reduction): Image {
                        source: root.zoomed_image;
                        // JavaScript-style background-position calculation: ((x * zoom) - w + bw)
                        // where w = loupe-radius * 2, bw = 2px border
                        x: -((touch_area.mouse-x * root.zoom-factor) - (root.loupe-radius * 2) + root.loupe-radius);
                        y: -((touch_area.mouse-y * root.zoom-factor) - (root.loupe-radius * 2) + root.loupe-radius);
                        // Scale the image for magnification
                        width: touch_area.width * root.zoom-factor;
                        height: touch_area.height * root.zoom-factor;
                    }
                }

                clicked => {
                    show_zoomed_image = false;
                    has_map = false;
                    has_legend = false;
                    image_opacity_reduction = false;
                }
            }
        }
    }

}

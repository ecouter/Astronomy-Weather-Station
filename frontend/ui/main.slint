                            height: 4px;
                            background: #ff0000;
                            border-radius: 4px;
                            x: (parent.width - 4px) / 2;
                            y: (parent.height - 4px) / 2;
                        }

                        if (!loading && error_message != "") : Text {
                            text: error_message;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                            color: #ff0000;
                        }
                    }

                    // Bottom-right: HRDPS.CONTINENTAL_PN-SLP (blended) with legend overlaid
                    TouchArea {
                        width: 50%;

                        Rectangle {
                            width: 100%;
                            height: 100%;

                            if (loading) : Text {
                                text: "Loading...";
                                horizontal-alignment: center;
                                vertical-alignment: center;
                            }

                            if (!loading && error_message == "") : Rectangle {
                                width: 100%;
                                height: 100%;

                                // Map background image
                                Image {
                                    source: map_image;
                                    width: 100%;
                                    height: 100%;
                                    image-fit: fill;
                                }

                                // Main image
                                Image {
                                    source: bottom_right_image;
                                    width: 100%;
                                    height: 100%;
                                    image-fit: fill;
                                    opacity: 60%;
                                }

                                // Legend overlaid on bottom-right
                                Image {
                                    source: legend_image;
                                    width: 100%;
                                    height: 100%;
                                    x: parent.width * 0.42;
                                    y: parent.height * 0;
                                    image-fit: contain;
                                }

                                // Red dot at center (coordinate location)
                                Rectangle {
                                    width: 4px;
                                    height: 4px;
                                    background: #ff0000;
                                    border-radius: 4px;
                                    x: (parent.width - 4px) / 2;
                                    y: (parent.height - 4px) / 2;
                                }
                            }

                            if (!loading && error_message != "") : Text {
                                text: error_message;
                                horizontal-alignment: center;
                                vertical-alignment: center;
                                color: #ff0000;
                            }
                        }

                        clicked => {
                            if (!loading && error_message == "") {
                                has_map = true;
                                has_legend = true;
                                image_opacity_reduction = true;
                                legend = legend_image;
                                zoomed_image = bottom_right_image;
                                zoomed_title = "HRDPS Surface Pressure";
                                show_zoomed_image = true;
                            }
                        }
                    }
                }
                // Bottom portion (40% of left side
                // Bottom section: ClearDarkSky chart
                TouchArea {
                    width: 100%;
                    height: 150px;

                    Rectangle {
                        width: 100%;
                        height: 100%;

                        if (!loading && error_message == "") : Image {
                            source: cleardarksky_image;
                            width: 100%;
                            height: 100%;
                            image-fit: contain;
                        }

                        if (!loading && error_message != "") : Text {
                            text: error_message;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                            color: #ff0000;
                        }
                    }

                    clicked => {
                        if (!loading && error_message == "") {
                            zoomed_image = cleardarksky_image;
                            zoomed_title = "ClearDarkSky Chart";
                            show_zoomed_image = true;
                        }
                    }
                }
            }

            // Bottom 1/3: Buttons for additional pages
            Rectangle {
                height: 290px; // 1/3 of 800

                VerticalLayout {
                    alignment: center;
                    spacing: 20px;

                    HorizontalBox {
                        alignment: center;

                        Button {
                            width: 300px;
                            text: "Environment Canada Forecasts";
                            clicked => { show_env_canada = true; }
                        }

                        Rectangle {
                            width: 50px;
                        }

                        Button {
                            width: 300px;
                            text: "Nina Sessions";
                            clicked => { show_nina = true; }
                        }
                    }
                }
            }
        }
    }

    if (show_env_canada): EnvironmentCanadaPage {
        clouds_image: env_clouds_image;
        surface_wind_image: env_surface_wind_image;
        seeing_image: env_seeing_image;
        temperature_image: env_temperature_image;
        transparency_image: env_transparency_image;
        relative_humidity_image: env_relative_humidity_image;
        clouds_counter: env_clouds_counter;
        surface_wind_counter: env_surface_wind_counter;
        seeing_counter: env_seeing_counter;
        temperature_counter: env_temperature_counter;
        transparency_counter: env_transparency_counter;
        relative_humidity_counter: env_relative_humidity_counter;
        model_run_info: env_model_run_info;
        go_back => { show_env_canada = false; }
        clouds_previous => { env_canada_clouds_previous(); }
        clouds_next => { env_canada_clouds_next(); }
        surface_wind_previous => { env_canada_surface_wind_previous(); }
        surface_wind_next => { env_canada_surface_wind_next(); }
        seeing_previous => { env_canada_seeing_previous(); }
        seeing_next => { env_canada_seeing_next(); }
        temperature_previous => { env_canada_temperature_previous(); }
        temperature_next => { env_canada_temperature_next(); }
        transparency_previous => { env_canada_transparency_previous(); }
        transparency_next => { env_canada_transparency_next(); }
        relative_humidity_previous => { env_canada_relative_humidity_previous(); }
        relative_humidity_next => { env_canada_relative_humidity_next(); }
    }

    if (show_nina): NinaPage {
        image1: nina_image1;
        image2: nina_image2;
        image3: nina_image3;
        image4: nina_image4;
        image5: nina_image5;
        image6: nina_image6;
        url1: nina_url1;
        url2: nina_url2;
        url3: nina_url3;
        url4: nina_url4;
        url5: nina_url5;
        url6: nina_url6;
        go_back => { show_nina = false; }
        url_change <=> nina_url_change;
        url_index <=> nina_url_index;
        url_saved(index) => {
            // Trigger immediate update for the specific session
            nina_force_update = !nina_force_update;
            nina_url_index = index;
        }
    }

    // Coordinates error popup
    if (show_coordinates_popup): Rectangle {
        background: rgba(0, 0, 0, 0.5);
        width: 100%;
        height: 100%;
        z: 1000;

        VerticalLayout {
            alignment: center;
            padding-left: 480px;

            Rectangle {
                background: #1c1c1c;
                border-radius: 8px;

                width: 300px;
                height: 150px;

                VerticalLayout {
                    alignment: center;

                    Text {
                        text: "Coordinates Error";
                        font-size: 16px;
                        horizontal-alignment: center;
                        font-weight: 700;
                        color: white;
                    }

                    Text {
                        text: coordinates_popup_message;
                        color: white;
                        wrap: word-wrap;
                        height: 50px;
                        horizontal-alignment: center;
                    }

                    Button {
                        text: "OK";
                        clicked => { show_coordinates_popup = false; }
                    }
                }
            }
        }
    }

    // Zoom overlay
    if (show_zoomed_image): Rectangle {
        background: #000000cc; // Semi-transparent black background
        width: 100%;
        height: 100%;
        z: 2000; // Higher z-index than popup

        VerticalLayout {
            alignment: center;
            spacing: 20px;
            padding-left: 40px;

            HorizontalLayout {
                Text {
                    text: zoomed_title;
                    font-size: 48px;
                    color: #ffffff;
                    horizontal-alignment: center;
                }

                Text {
                    text: "Click image to close";
                    font-size: 24px;
                    vertical-alignment: center;
                    color: #ff0000;
                    horizontal-alignment: center;
                }
            }

            TouchArea {
                width: 1200px;
                height: 600px;

                // Map background image
                if (has_map): Image {
                    source: map_image;
                    width: 100%;
                    height: 100%;
                    image-fit: contain;
                    opacity: 70%;
                }

                if (image_opacity_reduction): Image {
                    source: zoomed_image;
                    width: 100%;
                    height: 100%;
                    image-fit: contain;
                    opacity: 70%;
                }

                if (!image_opacity_reduction): Image {
                    source: zoomed_image;
                    width: 100%;
                    height: 100%;
                    image-fit: contain;
                }

                // Legend overlaid on right
                if (has_legend): Image {
                    source: legend;
                    vertical-alignment: bottom;
                    width: 100%;
                    height: 40%;
                    x: parent.width * 0.42;
                    y: parent.height * 0;
                    image-fit: contain;
                }

                // Red dot at center (coordinate location)
                Rectangle {
                    width: 4px;
                    height: 4px;
                    background: #ff0000;
                    border-radius: 4px;
                    x: (parent.width - 4px) / 2;
                    y: (parent.height - 4px) / 2;
                }
    
                clicked => {
                    show_zoomed_image = false;
                    has_map = false;
                    has_legend = false;
                    image_opacity_reduction = false;
                }
            }
        }
    }
}
